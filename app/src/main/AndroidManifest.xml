<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fffroject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".FFFroject"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FFFroject"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".share.MyShareMainActivity"
            android:exported="false" />
        <activity
            android:name=".chat.ChatSendExistActivity"
            android:exported="false" />
        <activity
            android:name=".keyword.KeywordActivity"
            android:exported="false" />
        <activity
            android:name=".alarm.FcmActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".share.ShareUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".foodinput.OpenApiActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".share.FoodlistToShareActivity"
            android:exported="false" />
        <activity
            android:name=".chat.ChatListActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".chat.ChatDetailActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".chat.ChatActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".RegionSelectActivity"
            android:exported="false" />
        <activity
            android:name=".foodlist.FoodListActivity"
            android:exported="true" />
        <activity
            android:name=".foodinput.WriteActivity"
            android:exported="true"
            android:parentActivityName=".foodlist.FoodListActivity" />
        <activity
            android:name=".ExRecyclerView"
            android:exported="true" />
        <activity
            android:name=".share.SharePostActivity"
            android:exported="true" />
        <activity
            android:name=".share.ShareDetailActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".share.MyShareActivity"
            android:exported="true" />
        <activity
            android:name=".SharePointActivity"
            android:exported="true" />
        <activity
            android:name=".AuthActivity"
            android:exported="true"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" /> <!-- MINJEONG ADD -->
        <!-- 카메라 앱과 파일 정보를 공유하기 위한 프로바이더 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.fffroject.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider> <!-- BroadcastReceiver 부팅 시 실행 -->
        <receiver
            android:name=".alarm.AlertReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".keyword.FireBaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>