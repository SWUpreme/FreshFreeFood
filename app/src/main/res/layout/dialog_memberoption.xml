<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background_round"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btnShowMember"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/zxing_transparent"
                android:fontFamily="@font/roboto_regular"
                android:text="냉장고 멤버 보기"
                android:textColor="#71ABFF"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btnMemberDrop"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/zxing_transparent"
                android:fontFamily="@font/roboto_regular"
                android:text="냉장고 나가기"
                android:textColor="#71ABFF"
                android:textSize="17sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFridgememOptionClose"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dialog_background_round"
            android:fontFamily="@font/roboto_bold"
            android:text="취소"
            android:textColor="#71ABFF"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>